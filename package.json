{
  "name": "eventify",
  "version": "0.7.0",
  "private": true,
  "workspaces": [
    "./frontend",
    "./backend"
  ],
  "scripts": {
    "start:frontend": "npm run dev --workspace @eventify/frontend",
    "start:backend": "npm run dev --workspace @eventify/backend",
    "build:frontend": "npm run build --workspace @eventify/frontend",
    "build:backend": "npm run build --workspace @eventify/backend",
    "build": "npm run build:frontend && npm run build:backend"
  },
  "dependencies": {
    "dotenv": "^16.4.7",
    "rimraf": "^5.0.0",
    "typescript": "^5.8.2"
  }
}
